<nav class="p-blue">
  <%= link_to '<-', groups_path %>
  <h1>New Category</h1>
  <h4>Help</h4>
</nav>

<div>
<%= form_with model: @group, method: :post, url: groups_path do |form| %>
<br/>
  <div>
    <%= form.text_field :name, placeholder: "Name" , class: "form-field" %><br>
  </div>

  <div>
    <%= form.text_field :icon, placeholder: "icon" , class: "form-field" %><br>
  </div>

  <div class="bottom-btn p-green">
    <%= form.submit "Save Category", class: "new-categ-btn p-green" %><br>
  </div>
  <%end%>
</div>
