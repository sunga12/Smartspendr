  <nav class="p-blue">
    <h2>Change your password</h2>
</nav>
<section class="page">


  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.password_field :password, class: "form-field", placeholder: "New password (6 characters minimum)" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, class: "form-field", placeholder: "Confirm new password" %>
    </div>

    <div class="actions bottom-btn p-green">
      <%= f.submit "Change my password", class: "new-categ-btn p-green" %>
    </div>
  <% end %>

</section>