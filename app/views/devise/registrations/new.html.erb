<nav class="p-blue">
<%= button_to '<-', welcome_index_path, class: "p-blue" %>
  <p>REGISTER</p>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="actions">
    <%= f.submit "Next", class: "p-blue"  %>
  </div>

  </nav>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-fields">
    <div class="field">
        <%= f.text_field :name, placeholder: "Full Name", class: "form-field"  %>
    </div>

    <div class="field">
        <%= f.email_field :email, placeholder: "Email", class: "form-field"  %>
    </div>

    <div class="field">
      <%= f.password_field :password, placeholder: "Password", class: "form-field"  %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: "form-field"  %>
    </div>

  </div>
<% end %>

<%= render "devise/shared/links" %>
